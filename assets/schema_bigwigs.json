{
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string", 
                "meta": ["id"]
            },
            "species": {
                "type": "string",
                "meta": ["species"]
            },
            "bigwig": {
                "type": "string"
            }
        },
        "required": ["id", "species"]
    }
}

